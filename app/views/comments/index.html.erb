<h1>Comments</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>User name</th>
    <th>Body</th>
    <th>Idea</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.body %></td>

      <td><%= link_to 'Show', [comment.idea, comment] %></td>
      <td><%= link_to 'Edit', edit_idea_comment_path(comment.idea, comment) %></td>
      <td><%= link_to 'Destroy', [comment.idea, comment], method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
